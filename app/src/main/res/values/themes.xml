<resources>
    <!-- Base application theme. -->
    <style name="Theme.GithubUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/github_dark</item>
        <item name="colorPrimaryVariant">@color/github_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_800</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/black</item>
        <item name="android:actionOverflowButtonStyle">@style/KebabMenu</item>
    </style>

    <style name="Content">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TabLayoutColor">
        <item name="tabSelectedTextColor">@color/github_dark</item>
        <item name="tabIndicatorColor">@color/github_dark</item>
    </style>

    <style name="KebabMenu" parent="android:Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_baseline_more_vert_24</item>
    </style>
</resources>